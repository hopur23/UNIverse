@using Microsoft.AspNet.Identity;
@model UNIverse.Models.ViewModels.GroupViewModel

@{
    ViewBag.Title = "New";
}

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />

<html>
<body>
    @using (Html.BeginForm()) 
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal">
            <h3>Create a new group!</h3>
            @Html.ValidationSummary(true)
            <div class="form-group">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Name)
                    @Html.ValidationMessageFor(model => model.Name)
                </div>
            </div>
    
            <div class="form-group">
                @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Description, new { @cols = "40", @rows = "3" })
                    @Html.ValidationMessageFor(model => model.Description)
                </div>
            </div>

            <div class="form-group">
                <div class="picpreview">
                    <img src="@Url.Content(Model.GroupPicturePath)" class="img-responsive" alt="Profile pic not found" />
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.GroupPicturePath, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.GroupPicturePath)
                    @Html.ValidationMessageFor(model => model.GroupPicturePath)
                </div>
            </div>
    
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
    
    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</body>
</html>
