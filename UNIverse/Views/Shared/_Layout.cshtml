@using Microsoft.AspNet.Identity;

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"></script>
</head>
<body>
    <section id="header">
        <div class="container">
            <div class="logo"><img src="http://i60.tinypic.com/30kg26r.jpg" alt="UNIverse logo"/></div>
            <ul id="menu">
                <li>
                    <a href="@Url.Action("Friends", "User")">
                        <i class="glyphicon glyphicon-th-list"> Friends</i>
                        <span class="sr-only">Friends</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Index", "User", new { userId = User.Identity.GetUserId() })">
                        <i class="glyphicon glyphicon-user"> Profile</i>
                        <span class="sr-only">Profile</span>
                    </a>
                </li>
                <li>
                    <a href="@Url.Action("Search", "Home")">
                        <i class="glyphicon glyphicon-search"></i>
                        <span class="sr-only">Search</span>
                    </a>
                </li>
                <li><a href="@Url.Action("Edit", "User", new { userId = User.Identity.GetUserId() })">
                        <i class="glyphicon glyphicon-pencil"></i>
                        <span class="sr-only">Edit</span></a></li>
                <li>
                    <a href="@Url.Action("Edit", "User")">
                        <i class="glyphicon glyphicon-question-sign"></i>
                        <span class="sr-only">Edit</span>
                    </a>
                </li>
                  @Html.Partial("_LoginPartial")
            </ul>
        </div>
    </section>
    <div class="container">
        <section id="main">
            @RenderBody()
        </section>
        <section id="sidebar">
            <ul class="nav">
                <li>@Html.ActionLink("Newsfeed", "Index", "Home")</li>
                <li>@Html.ActionLink("Groups", "Index", "Group")</li>
                    <ul class="navnav">
                        <li>List of goups</li>
                        <li>List of partygoups</li>
                        <li>List of goups</li>
                        <li>List of goups</li>
                    </ul>
                <li>@Html.ActionLink("Useful Things", "Index", "UsefulThings")</li>
                    <ul class="navnav">
                        <li>@Html.ActionLink("Tilboð / Auglýsingar", "Index", "Tilbod")</li>
                        <li>@Html.ActionLink("Íbúðir í Reykjavík", "Index", "Ibudir")</li>
                        <li><a href="http://hr.ingur.is/">HRingurinn</a></li>
                        <li>@Html.ActionLink("Skiptibókamarkaður", "Index", "Skiptibok")</li>
                    </ul>
            </ul>
            </section>
        </div>
            <div id="footer">
                <div class="container">
                        <p>Hópur 23 - Verklegt Námskeið 2 | 2015 | Háskólinn í Reykjavík</p>
                    </div>
            </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/Content/css")
    @RenderSection("scripts", required: false)
</body>
</html>
